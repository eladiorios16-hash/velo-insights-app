// --- RUTA SITEMAP PARA GOOGLE SEO ---
app.get('/sitemap.xml', async (req, res) => {
    try {
        // 1. Dominio oficial SIN 'www' (Vital para coincidir con las etiquetas Canonical)
        const baseUrl = 'https://veloinsights.es'; 

        let xml = `<?xml version="1.0" encoding="UTF-8"?>\n`;
        xml += `<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">\n`;

        // 2. Añadir las páginas estáticas reales y actualizadas
        const staticPages = [
            '/', 
            '/noticias.html', 
            '/calendario.html', 
            '/equipos.html', 
            '/labs.html', 
            '/calculadora.html',
            '/glosario.html',
            '/privacidad.html'
        ];
        
        staticPages.forEach(page => {
            xml += `  <url>\n`;
            xml += `    <loc>${baseUrl}${page}</loc>\n`;
            xml += `    <changefreq>daily</changefreq>\n`;
            // Le damos un 1.0 de prioridad a la home, y 0.8 al resto de secciones principales
            xml += `    <priority>${page === '/' ? '1.0' : '0.8'}</priority>\n`;
            xml += `  </url>\n`;
        });

        // 3. Obtener Noticias de tu Base de Datos (SEO Dinámico)
        const noticias = await new Promise((resolve, reject) => {
            db.all("SELECT id, date FROM news ORDER BY id DESC", [], (err, rows) => {
                if (err) reject(err);
                else resolve(rows || []);
            });
        });

        noticias.forEach(news => {
            xml += `  <url>\n`;
            xml += `    <loc>${baseUrl}/noticias.html?article=${news.id}</loc>\n`;
            xml += `    <changefreq>weekly</changefreq>\n`;
            xml += `    <priority>0.9</priority>\n`; // Las noticias son muy importantes para Google
            xml += `  </url>\n`;
        });

        // 4. Obtener Términos del Glosario de tu Base de Datos
        const glosario = await new Promise((resolve, reject) => {
            db.all("SELECT term FROM glossary", [], (err, rows) => {
                if (err) reject(err);
                else resolve(rows || []);
            });
        });

        glosario.forEach(item => {
            xml += `  <url>\n`;
            // Usamos encodeURIComponent para tildes y espacios
            xml += `    <loc>${baseUrl}/glosario.html?term=${encodeURIComponent(item.term)}</loc>\n`;
            xml += `    <changefreq>monthly</changefreq>\n`;
            xml += `    <priority>0.6</priority>\n`;
            xml += `  </url>\n`;
        });

        xml += `</urlset>`;

        // 5. Enviar al navegador como archivo XML puro
        res.header('Content-Type', 'application/xml');
        res.send(xml);

    } catch (error) {
        console.error('Error generando sitemap:', error);
        res.status(500).send('Error generando sitemap');
    }
});
